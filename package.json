{
	
	
	"name": "JavaCodeSelectionRunner",
	"displayName": "JavaCode Selection Runner",
	"description": "This is an extension that uses Jsehll to execute selected parts of Java code.",
	"publisher": "ksp-kitam",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ksp-kitam/JavaCodeSelectionRunner"
	},
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"when": "resourceLangId == Java",
				"command": "JavaCodeSelectionRunner.RunCode",
				"title": "Run JavaCode"
			}
		],
		"configuration": {
			"type": "object",
			"title": "JavaCodeSelectionRunner",
			"properties": {
				"JavaCodeSelectionRunner.java_home": {
					"type": "string",
					"default": "",
					"description": "Java installation directory"
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"command": "JavaCodeSelectionRunner.RunCode",
					"group": "myGroup@1"
				}
			]
		},
		"languages": [
			{
				"id": "java",
				"extensions": [
					".java",
					".jsh"
				],
				"aliases": [
					"Java",
					"java"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.2",
		"@types/node": "18.x",
		"@types/vscode": "^1.83.0",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.50.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.4",
		"typescript": "^5.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"fs-extra": "^11.1.1",
		"iconv-lite": "^0.6.3"
	}
}
